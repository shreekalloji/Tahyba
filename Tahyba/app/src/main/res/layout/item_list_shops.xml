<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/cv_item_shop_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_3sdp">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:id="@+id/iv_shop_img"
            android:src="@drawable/dummy" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.iprismtech.tahyba.customviews.CustomTextViewNormal
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smokey Pitara"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_shop_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RatingBar
                        android:id="@+id/rating_shop"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:focusable="false"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="0" />
                </LinearLayout>

            </LinearLayout>

            <com.iprismtech.tahyba.customviews.CustomTextViewNormal
                android:id="@+id/tv_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indira nagar, guchibolwui" />


            <com.iprismtech.tahyba.customviews.CustomTextViewNormal
                android:id="@+id/tv_shop_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000-000-0000"
                 />

            <com.iprismtech.tahyba.customviews.CustomTextViewNormal
                android:id="@+id/tv_shop_open_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Now"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>