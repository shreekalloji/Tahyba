<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/set_password_mytoolbar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/left_arrow" />

            <com.iprismtech.tahyba.customviews.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="Set Password"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="* Enter New Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14sdp" />

    <com.iprismtech.tahyba.customviews.CustomEditTextNormal
        android:id="@+id/enterpass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:hint="**********"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="* Confirm Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14sdp" />

    <com.iprismtech.tahyba.customviews.CustomEditTextNormal
        android:id="@+id/confirmpass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:hint="**********"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/black"

        android:textSize="@dimen/_14sdp" />
</LinearLayout>
    <com.iprismtech.tahyba.customviews.CustomTextViewNormal
        android:id="@+id/password_save_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/black"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />
</RelativeLayout>